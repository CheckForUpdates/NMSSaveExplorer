<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.nmssaveexplorer.SaveExplorerController">

    <!-- ===================== MENU BAR ===================== -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem onAction="#onOpenSaveFile" text="Open Save..." />
                    <MenuItem onAction="#onSaveChanges" text="Save Changes" />
                    <MenuItem onAction="#onSaveAs" text="Save As..." />
                    <MenuItem onAction="#onExportJson" text="Export JSON..." />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#onExitApp" text="Exit" />
                </Menu>

                <Menu text="Exosuit">
                    <MenuItem onAction="#onShowExosuitGrid" text="Show Exosuit Grid" />
                </Menu>

                <Menu text="View">
                    <MenuItem onAction="#onExpandAll" text="Expand All Nodes" />
                    <MenuItem onAction="#onCollapseAll" text="Collapse All Nodes" />
                </Menu>

                <Menu text="Help">
                    <MenuItem onAction="#onShowAbout" text="About" />
                </Menu>
            </MenuBar>

            <ToolBar>
                <Label fx:id="statusLabel" style="-fx-padding: 4 0 4 6; -fx-font-weight: bold;" text="Status: Ready." />
            </ToolBar>
        </VBox>
    </top>

    <!-- ===================== MAIN CONTENT ===================== -->
    <center>
        <SplitPane dividerPositions="0.25">
            <!-- JSON Tree -->
            <TreeView fx:id="jsonTree" />

            <!-- RichTextFX editor container -->
            <StackPane fx:id="editorContainer" prefHeight="671.0" prefWidth="1059.0" style="-fx-background-color: #1e1e1e;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
        </SplitPane>
    </center>
</BorderPane>
